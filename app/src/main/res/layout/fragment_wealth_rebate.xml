<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_moneybg"
    android:orientation="vertical">

    <include layout="@layout/topbar"></include>

    <RelativeLayout
        android:id="@+id/fragment_rebate_rlShang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size111"
        android:layout_below="@+id/ll_topbar"
        android:background="@color/color_red"
        android:gravity="center">

        <TextView
            android:id="@+id/fragment_rebate_tvCan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/fragment_rebate_tvDraw"
            android:textColor="@color/color_bg"
            android:textSize="@dimen/txt17" />

        <TextView
            android:id="@+id/fragment_rebate_tvCanMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_rebate_tvCan"
            android:layout_centerHorizontal="true"
            android:text="0.00"
            android:textColor="@color/color_bg"
            android:textSize="@dimen/txt45" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment_rebate_rlXia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size98"
        android:layout_below="@+id/fragment_rebate_rlShang"
        android:background="@color/color_red"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/fragment_rebate_tvAlready"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/fragment_rebate_tvTotalMoney"
                    android:textColor="@color/color_bg"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/fragment_rebate_tvAlreadyMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_rebate_tvAlready"
                    android:layout_centerHorizontal="true"
                    android:text="0.00"
                    android:textColor="@color/color_bg"
                    android:textSize="@dimen/txt15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/fragment_rebate_tvFreeze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/fragment_look_tvFreeze"
                    android:textColor="@color/color_bg"
                    android:textSize="@dimen/txt15" />

                <TextView
                    android:id="@+id/fragment_rebate_tvFreezeMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_rebate_tvFreeze"
                    android:layout_centerHorizontal="true"
                    android:text="0.00"
                    android:textColor="@color/color_bg"
                    android:textSize="@dimen/txt15" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_rebate_tvZhu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/fragment_rebate_tvZhu"
            android:textColor="@color/color_white_75"
            android:textSize="@dimen/txt12">

        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/fragment_money_rebate_tvDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:layout_below="@+id/fragment_rebate_rlXia"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/color_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size10"
        android:text="@string/fragment_money_rebate_tvDetail"
        android:textColor="@color/grey_color1"
        android:textSize="@dimen/txt17" />

    <TextView
        android:id="@+id/fragment_money_rebate_tvXian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_below="@+id/fragment_money_rebate_tvDetail"
        android:background="@color/color_fengexian" />

    <LinearLayout
        android:id="@+id/fragment_money_rebate_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_money_rebate_tvXian"
        android:background="@color/color_bg"
        android:paddingBottom="@dimen/size20"
        android:paddingTop="@dimen/size20">

        <TextView
            android:id="@+id/fragment_money_rebate_tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/frg_money_rebate_tvName"
            android:textColor="@color/grey_color3"
            android:textSize="@dimen/txt16" />

        <TextView
            android:layout_width="@dimen/size0.5"
            android:layout_height="@dimen/size20"
            android:background="@color/color_shu" />

        <TextView
            android:id="@+id/fragment_money_rebate_tvMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/frg_money_rebate_tvMoney"
            android:textColor="@color/grey_color3"
            android:textSize="@dimen/txt16" />

        <TextView
            android:layout_width="@dimen/size0.5"
            android:layout_height="@dimen/size20"
            android:background="@color/color_shu" />

        <TextView
            android:id="@+id/fragment_money_rebate_tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/frg_money_rebate_tvTime"
            android:textColor="@color/grey_color3"
            android:textSize="@dimen/txt16" />
    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/fragment_money_rebate_xrecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_money_rebate_tvApply"
        android:layout_below="@+id/fragment_money_rebate_ll"
        android:background="@color/color_bg"
        android:scrollbars="none"></com.jcodecraeer.xrecyclerview.XRecyclerView>

    <LinearLayout
        android:id="@+id/fragment_money_rebate_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_money_rebate_tvApply"
        android:layout_below="@+id/fragment_money_rebate_ll"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nodata_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_no_data_img" />

        <TextView
            android:id="@+id/tv_nodata_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nodata_pic"
            android:layout_marginTop="@dimen/size10"
            android:text="@string/text_no_data"
            android:textColor="@color/color_text_title"
            android:textSize="12sp" />
    </LinearLayout>

    <com.svgouwu.client.view.LoadPage
        android:id="@+id/mLoadPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_money_rebate_tvApply"
        android:layout_below="@+id/fragment_money_rebate_ll"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_above="@+id/fragment_money_rebate_tvApply"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/color_fengexian" />

    <TextView
        android:id="@+id/fragment_money_rebate_tvApply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:layout_alignParentBottom="true"
        android:background="@color/color_bg"
        android:gravity="center"
        android:text="@string/fragment_money_look_tvApply"
        android:textColor="@color/color_rebate_btn"
        android:textSize="@dimen/txt15" />

</RelativeLayout>