<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_coupon_excancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/hf_redbag_delete"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_below="@id/iv_coupon_excancle"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/coupon_exchange"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="60dp">
            <TextView
                android:id="@+id/tv_coupon_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换码"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/et_coupon_redeem"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@id/tv_coupon_exchange"
                android:hint="请输入兑换码"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:background="@drawable/coupon_exchange_bg"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_coupon_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/et_coupon_vc"
                android:layout_width="200dp"
                android:singleLine="true"
                android:layout_height="48dp"
                android:layout_toRightOf="@id/tv_coupon_verification"
                android:hint="请输入验证码"
                android:layout_centerVertical="true"
                android:background="@drawable/coupon_exchange_bg"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="10dp">
            <!--<ImageView
                android:id="@+id/iv_coupon_vc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_shiyong_2x"
                android:layout_marginLeft="60dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"/>-->
            <com.svgouwu.client.view.CodeView
                android:id="@+id/cv_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D0D3D9"/>
            <RelativeLayout
                android:id="@+id/rl_coupon_vc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/cv_verification">
                <TextView
                    android:id="@+id/tv_coupon_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看不清？"
                    android:layout_marginLeft="8dp"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="换一张"
                    android:autoLink="all"
                    android:textColor="@color/color_red"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/tv_coupon_context"
                    android:layout_alignLeft="@id/tv_coupon_context"
                    android:layout_centerVertical="true"
                    android:textSize="10sp"/>
            </RelativeLayout>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_coupon_change"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_above="@+id/tv_scan_cancel"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_scan_login"
            android:gravity="center"
            android:text="立即兑换"
            android:textColor="@color/color_white"
            android:textSize="18sp" />
    </LinearLayout>


</RelativeLayout>