<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size66"
    android:layout_marginTop="@dimen/size2"
    android:background="@color/color_bg"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_money_look_tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size10"
        android:text="名称"
        android:textColor="@color/grey_color1"
        android:textSize="@dimen/txt14" />

    <TextView
        android:id="@+id/item_money_look_tvMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size10"
        android:text="100.00"
        android:textColor="@color/grey_color1"
        android:textSize="@dimen/txt14" />

    <TextView
        android:id="@+id/item_money_look_tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_money_look_tvUser"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:text="2017081215647448007"
        android:textColor="@color/grey_color1"
        android:textSize="@dimen/txt14" />

    <TextView
        android:id="@+id/item_money_look_tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_money_look_tvMoney"
        android:layout_marginRight="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:text="2017-10-10"
        android:textColor="@color/grey_color1"
        android:textSize="@dimen/txt14" />

</RelativeLayout>