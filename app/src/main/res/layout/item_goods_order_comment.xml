<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_goods_order_comment_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_default_bg" />

    <TextView
        android:id="@+id/tv_item_goods_order_comment_name"
        style="@style/GoodsFilterTitleStyle"
        android:layout_toRightOf="@id/iv_item_goods_order_comment_pic"
        android:maxLines="2"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称" />

    <ImageView
        android:id="@+id/iv_item_goods_order_comment_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_goods_comment_send" />
</RelativeLayout>