<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size26.5"
    android:background="@color/color_bg"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/size26.5">

    <TextView
        android:id="@+id/item_rebate_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="@color/grey_color1"
        android:textSize="@dimen/txt14" />

    <TextView
        android:layout_width="@dimen/size1"
        android:layout_height="@dimen/size20"
        android:background="@color/color_bg" />

    <TextView
        android:id="@+id/item_rebate_tvMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="@color/grey_color1"
        android:textSize="@dimen/txt14" />

    <TextView
        android:layout_width="@dimen/size1"
        android:layout_height="@dimen/size20"
        android:background="@color/color_bg" />

    <TextView
        android:id="@+id/item_rebate_tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="@color/grey_color1"
        android:textSize="@dimen/txt14" />
</LinearLayout>