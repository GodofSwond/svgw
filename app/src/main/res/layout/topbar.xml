<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_topbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_topbar_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/header_height"
            android:layout_height="@dimen/header_height"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:scaleType="center"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/AppTitleStyle"
            android:text="详情" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:src="@drawable/btn_top_share"
                android:scaleType="center"
                android:layout_marginRight="8dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_top_right2"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:src="@drawable/btn_top_share_message"
                android:scaleType="center"
                android:layout_marginRight="8dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="14sp"
                android:text=""
                android:textColor="@color/color_text_desc"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>


        <View
            android:id="@+id/vXian"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_fengexian" />
        />
    </RelativeLayout>

</LinearLayout>
