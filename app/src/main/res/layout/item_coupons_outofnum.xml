<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="5">

    <LinearLayout
        android:id="@+id/item_couCenter_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@drawable/bk_yilingqu"
        android:orientation="vertical">
        <!-- 上半部分权重布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="5">


            <RelativeLayout
                android:id="@+id/item_coupons_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5">

                <RelativeLayout
                    android:id="@+id/item_couCenter_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/item_couCenter_tvSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/item_couCenter_tvMoney"
                        android:text="￥"
                        android:textColor="@color/color_divider"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/item_couCenter_tvHundred"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_couCenter_tvMoney"
                        android:layout_centerHorizontal="true"
                        android:text="满100元使用"
                        android:textColor="@color/grey_color3"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/item_couCenter_tvMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/item_couCenter_tvSign"
                        android:layout_toRightOf="@+id/item_couCenter_tvSign"
                        android:text="30"
                        android:textColor="@color/color_divider"
                        android:textSize="40dp" />
                </RelativeLayout>


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/grey_color3" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/item_couCenter_tvUseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_couCenter_tvName"
                    android:layout_marginTop="12dp"
                    android:text="使用期限："
                    android:textColor="@color/grey_color3"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/item_couCenter_tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_couCenter_tvUseDate"
                    android:layout_marginTop="5dp"
                    android:text="2015.12.30-2017.08.30"
                    android:textColor="@color/grey_color3"
                    android:textSize="11dp" />


                <TextView
                    android:id="@+id/item_couCenter_tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="19dp"
                    android:text="仅限家居部分商品"
                    android:textColor="@color/color_black_pressed"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/item_couCenter_ivDraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/img_lingwan" />

                <TextView
                    android:id="@+id/item_couCenter_tvCome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/item_couCenter_tvTime"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_gray_edge_corner_bg"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="3dp"
                    android:text="进入专场"
                    android:textColor="@color/sv_btn_bg_press"
                    android:textSize="11dp" />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
