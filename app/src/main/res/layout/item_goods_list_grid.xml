<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_goods_list_pic"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@color/grey_color3" />


    <!--商品信息-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/color_item_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_item_goods_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="蕾蒂金花期腮红 #5 月红蕾蒂金花期腮红 #5 月红蕾蒂金花期腮红 #5 月红蕾蒂金花期腮红 #5 月红蕾蒂金花期腮红 #5 月红"
            android:textColor="@color/color_text_title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_goods_list_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="$ 50.00 元"
            android:textColor="@color/color_money"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_goods_list_sell_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_item_goods_list_money"
            android:singleLine="true"
            android:text="已售 15963 件, 6621 评论"
            android:textColor="@color/grey_color2"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>