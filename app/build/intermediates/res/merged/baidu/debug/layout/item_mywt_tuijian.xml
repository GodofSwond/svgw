<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_mywt"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@color/grey_color3" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_item_bg"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_item_mywt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/color_text_title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_mywt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tv_item_mywt_title"
            android:singleLine="true"
            android:text="0.00 å…ƒ"
            android:textColor="@color/color_money"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>