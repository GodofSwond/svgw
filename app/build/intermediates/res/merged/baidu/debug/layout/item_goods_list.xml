<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_goods_list_pic"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:src="@color/grey_color3" />


    <!--商品信息-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@color/color_item_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_item_goods_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/color_text_title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_goods_list_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@color/color_money"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_goods_list_sell_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_item_goods_list_money"
            android:singleLine="true"
            android:textColor="@color/grey_color2"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>