<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/share_popu_bg"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/ll_share_menu_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/top_share_menu_news"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/share_pop_news"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/light_white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="2dp"
            android:background="#BDBDBD" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_share_menu_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top_share_menu_home"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/share_pop_home"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/light_white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="2dp"
            android:background="#BDBDBD" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_share_menu_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top_share_menu_share"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/btn_share_menu_share"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/light_white"
            android:textSize="16sp"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>