<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/topbar" />

    <ImageView
        android:id="@+id/iv_pay_status"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_pay_success"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/color_text_title"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="正在为您自动跳转..."
        android:textColor="@color/color_text_desc"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_ps_coupon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="15dp"
        android:background="@drawable/pay_success_getcoupon"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_ps_cp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/color_red"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_sp_cp_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:layout_below="@id/tv_ps_cp_title"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_red"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>